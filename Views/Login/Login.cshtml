@model FlowersStore.ViewModels.LoginViewModel
@using FlowersStore.Controllers

@{
    Layout = null;
    var key = "SubmitLoginDialog";
    var frmId = $"{key}_F";
    var msgId = $"{key}_M";
    var btnId = $"{key}_B";
}

<script defer src="~/lib/jquery/dist/jquery.min.js"></script>
<script defer src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title">Login</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <form id="@frmId" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <span class="input-span">
                    <input asp-for="Name" class="form-control" placeholder="Name" id="nametxt" type="text" />
                </span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <span class="input-span">
                    <input asp-for="Password" class="form-control" placeholder="Password" id="passwordtxt" type="password" />
                </span>
            </div>
        </form>

        <div>
            <label id="@msgId" class="alert-danger m-1"></label>
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary loginBtn" id="@btnId">Login</button>
        <button type="button" class="btn btn-primary Hidable">Hide</button>
    </div>
</div>

<script>
        $('#@btnId').on('click', function (e) {
            dialogPost(e, '@key', '@(new Link(nameof(LoginController), nameof(LoginController.Login)).ToString())');
        });
</script>
