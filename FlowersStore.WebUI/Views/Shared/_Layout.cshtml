                        <li class="nav-item">
                            <a class="btnClick nav-btn form-control"  href='@Url.Action("Index", "Home", new { area = "" })'>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btnClick nav-btn form-control"  href='@Url.Action("Privacy", "Home", new { area = "" })'>Privacy</a>
                        </li>
