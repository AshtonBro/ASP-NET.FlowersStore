
@{
    ViewData["Title"] = "ADMINISTRATOR PANEL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container container-admin">
    <section class="admin">
        <h2 class="store-title">@ViewData["Title"]</h2>
        <div class="developer-box">
            <img class="developer-box-img" src="~/Image/gear.svg" alt="gear" />
            <h3 class="developer-box-desc">
                This page is under construction.
            </h3>
        </div>
    </section>
</div>

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Profile";
    var HttpContextUser = HttpContextAccessor.HttpContext.User.Identity.Name;
}

<div class="container container-profile">
    <section class="profile">
        <h3 class="checkout-group__title">@ViewData["Title"]</h3>
        <div class="profile-body">
            <form class="profile-form" id="form_id" method="post" enctype="multipart/form-data">

                @{
                    if (HttpContextUser == "Admin")
                    {
                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__choose-user">Choose a user</div>
                            <select name="choose-user" class="choose-user-selector input-style">
                                <option class="choose-user-option">Max</option>
                                <option class="choose-user-option">Roman</option>
                            </select>
                        </div>
                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__role">Role</div>
                            <select name="user-role" class="user-role-selector input-style">
                                <option class="user-role-option">User</option>
                                <option class="user-role-option">Administrator</option>
                            </select>
                        </div>
                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__name">Name</div>
                            <input type="text" value="John" class="profile-data__input input-style" />
                        </div>
                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__secondName">SecondName</div>
                            <input type="text" value="Smith" class="profile-data__input input-style" />
                        </div>
                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__phone">Phone</div>
                            <input type="tel" value="+792265554" class="profile-data__input input-style" />
                        </div>
                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__email">Email</div>
                            <input type="email" value="johnsmith@mail.ru" class="profile-data__input input-style" />
                        </div>

                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__password">Password</div>
                            <input type="password" value="" class="profile-data__input input-style" />
                        </div>

                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__ConfirmPassword">ConfirmPassword</div>
                            <input type="password" value="" class="profile-data__input input-style" />
                        </div>

                        <div>
                            <label id="msg" class="alert-danger m-1"></label>
                        </div>

                        <button type="submit" class="button-btn btn-user-changes auth" id="Save changes">Save changes</button>
                    }
                    else
                    {
                        <div class="profile-data">
                            <div class="profile-data-desc profile-data__name">You is not ADMIN.</div>
                        </div>
                    }
                }

            </form>
        </div>
    </section>
</div>

